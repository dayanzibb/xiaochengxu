.title{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:50rpx;
  background: #21c0c0;
}
.title>image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background:#f2f2f2;
}
.title>text{
  font-size:14px;
  margin-top:20rpx;
  color:#fff;
}
.title>button{
  font-size:14px;
  margin-top:20rpx;
  color:#fff;
  background:#21c0c0;
}
.rule{
  width: 100%;
  height: 10rpx;
  background: #f2f2f2;
}
.cell{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:20rpx;
  padding-top:30rpx;
  padding-bottom:30rpx;
}
.cell>.left{
  display: flex;
  align-items: center;
}
.cell >.left>image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.cell >.left>text{
  font-size: 14px;
  color:#333;
  margin-left: 20rpx;
}
.cell>.right{
  width: 20rpx;
  height: 20rpx;
  border-top:1px solid #999;
  border-right:1px solid #999;
  transform: rotate(45deg);
}
.cell>.name{
  font-size: 14px;
  color:#999;
}