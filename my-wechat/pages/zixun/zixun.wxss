/* pages/zixun/zixun.wxss */
.list{
  display: flex;
  padding:20rpx;
  border-bottom:1px solid #e8e8e8;
}
.list_left{
  width: 300rpx;
}
.list_left image{
  width: 300rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.list_right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  line-height: 36rpx;
  padding:10rpx 20rpx;
  width: 100%;
}
.list_right>text{
  font-size: 14px;
  color:#333;
}
.list_right .text{
  display: flex;
  justify-content: space-between;
}
.text text{
  font-size:12px;
  color:#999;
}