/* pages/zixun_news/zixun_news.wxss */

.title {
  padding-top: 20rpx;
  padding-right: 20rpx;
}

.top {
  display: flex;
}

.slide {
  width: 16rpx;
  height: 50rpx;
  background: #21c0c0;
}

.topic {
  font-size: 16px;
  color: #333;
  font-weight: bold;
  margin-left: 10rpx;
}

.time {
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  padding-left: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #ccc;
}

.time .text {
  font-size: 12px;
  color: #999;
  margin-right: 10rpx;
}

.content {
  padding: 30rpx;
  padding-top: 0;
  line-height: 40rpx;
}

.content .text {
  font-size: 14px;
  color: #333;
  text-indent: 1rem;
  line-height: 60rpx;
}

.content .image {
  width: 100%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

/*打分*/

.score {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score text {
  font-size: 14px;
  color: #999;
}

.star {
  display: flex;
}

.xing {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 140rpx;
}

.score .top {
  overflow: hidden;
  color: #fc0;
  position: absolute;
}

.score .bottom {
  color: #e8e8e8;
}

.worth {
  display: flex;
  font-size: 12px;
  color: #999;
  padding: 20rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
  justify-content: space-around;
}

.worth view {
  width: 180rpx;
  height: 70rpx;
  border: 1px solid #21c0c0;
  border-radius: 40rpx;
  text-align: center;
  line-height: 70rpx;
}

.worth view:hover {
  background: #21c0c0;
  color: #fff;
}

/*评论*/

.discuss {
  display: flex;
  margin-top: 20rpx;
}

.discuss>text {
  margin-left: 20rpx;
}

.discuss_content {
  display: flex;
  padding: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #e8e8e8;
}

.noComment {
  height: 300rpx;
  margin-bottom: 140rpx;
}

.left {
  width: 100rpx;
  height: 100rpx;
}

.left image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.right {
  display: flex;
  flex-direction: column;
}

.right .dis_title {
  color: #333;
}

.right text {
  font-size: 14px;
}

.right .dis_time {
  font-size: 10px;
  color: #999;
  margin-top: 14rpx;
}

.right .dis_content {
  font-size: 12px;
  margin-top: 16rpx;
  color: #666;
}

.dis_bottom {
  padding-bottom: 140rpx;
}

/*最底部评论*/

.comment {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #f8f8f8;
  padding-right: 20rpx;
}

.comment>.input {
  width: 700rpx;
  height: 60rpx;
  background: #e8e8e8;
  border-radius: 40rpx;
  margin: 20rpx auto;
  color: #999;
  font-size: 14px;
  line-height: 60rpx;
  padding-left: 20rpx;
}

/*弹出模态框*/

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 660rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 50%;
  z-index: 9999;
  margin-left: -330rpx;
  margin-top: 20rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.modal-title {
  padding-top: 20rpx;
  font-size: 14px;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 20rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 14px;
}

.modal-input .input {
  width: 100%;
  height: 160rpx;
  font-size: 14px;
  line-height: 28rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color: #333;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 14px;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  text-align: center;
}

.btn-confirm button {
  color: #21c0c0;
  font-size: 14px;
  line-height: 86rpx;
  border:0;
  outline: none;
  border-radius: 0;   
}
